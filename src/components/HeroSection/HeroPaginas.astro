---
const { title, text } = Astro.props;
---

<div class="mb-20 animate-on-scroll">
  <h2
    class="font-family-tight font-regular text-5xl md:text-7xl leading-[1.03] tracking-tighter text-balance mb-4"
  >
    {title}
  </h2>
  <p
    class="text-lg md:text-xl text-center md:text-left text-foreground/80 max-w-3xl mt-4"
  >
    {text}
  </p>
</div>
