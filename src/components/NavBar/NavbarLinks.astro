<div
  id="navbar-links"
  class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1 transition-all duration-200"
>
  <ul
    class="flex flex-col p-4 md:p-0 mt-4 font-medium md:flex-row md:space-x-8 md:mt-0"
  >
    <li>
      <a
        href="#home"
        id="home-link"
        class="nav-link block text-xl font-bold py-2 px-3 text-gray-900 rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:hover:text-[#e63605] md:p-0 md:dark:hover:text-[#e63605] dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
        >Inicio</a
      >
    </li>
    <li>
      <a
        href="#about"
        id="about-link"
        class="nav-link block text-xl font-bold py-2 px-3 text-gray-900 rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:hover:text-[#e63605] md:p-0 md:dark:hover:text-[#e63605] dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
        >Sobre Nosotros</a
      >
    </li>
    <li>
      <a
        href="#servicios"
        id="services-link"
        class="nav-link block text-xl font-bold py-2 px-3 text-gray-900 rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:hover:text-[#e63605] md:p-0 md:dark:hover:text-[#e63605] dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
        >Servicios</a
      >
    </li>
  </ul>
</div>
