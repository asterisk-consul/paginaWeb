---
export interface Props {
  post: any;
  index: number;
}

const { post, index } = Astro.props;

const fechaES = new Intl.DateTimeFormat("es-ES", {
  day: "numeric",
  month: "long",
  year: "numeric",
}).format(post.data.pubDate);
---

<article
  class="card relative rounded-xl overflow-hidden border border-border bg-card transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl hover:shadow-primary/20 h-full flex flex-col"
  data-index={index}
>
  <div class="glow absolute inset-0 pointer-events-none"></div>

  <a href={`/blog/${post.slug}`}>
    <img
      src={post.data.imageUrl}
      alt={post.data.title}
      class="w-full h-48 object-cover"
    />
  </a>

  <!-- CONTENIDO -->
  <div class="p-6 relative z-10 flex flex-col flex-1">
    <p class="text-sm text-muted-foreground mb-2 capitalize">
      {fechaES}
    </p>

    <a href={`/blog/${post.slug}`}>
      <h3 class="text-2xl font-medium transition-colors hover:text-primary">
        {post.data.title}
      </h3>
    </a>

    <!-- DESCRIPCIÓN LIMITADA A 4 LÍNEAS -->
    <p class="description text-muted-foreground mt-3">
      {post.data.description}
    </p>

    <!-- CTA SIEMPRE ABAJO -->
    <a
      href={`/blog/${post.slug}`}
      class="mt-auto inline-flex items-center gap-2 text-primary font-semibold pt-4"
    >
      Leer más →
    </a>
  </div>
</article>

<style>
  .description {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
  }

  .card {
    --glow-color: rgba(0, 0, 0, 0.08);
  }

  :global([data-theme="dark"]) .card {
    --glow-color: rgba(255, 255, 255, 0.15);
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".card").forEach((card) => {
      const glow = card.querySelector(".glow");
      if (!glow) return;

      card.addEventListener("mousemove", (e) => {
        const rect = card.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;

        // Detectar si el tema es dark
        const isDark =
          document.documentElement.getAttribute("data-theme") === "dark";
        const glowColor = isDark
          ? "rgba(255, 255, 255, 0.15)"
          : "rgba(0, 0, 0, 0.08)";

        glow.style.background = `radial-gradient(circle 600px at ${x}px ${y}px, ${glowColor}, transparent 70%)`;
      });

      card.addEventListener("mouseleave", () => {
        glow.style.background = "none";
      });
    });
  });
</script>
