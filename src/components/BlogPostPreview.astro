---
export interface Props {
  post: any;
  index: number;
}

const { post, index } = Astro.props;
---

<div
  class="card relative block rounded-xl overflow-hidden border border-border bg-card group transition-all duration-500 hover:shadow-2xl hover:shadow-primary/20 transform hover:-translate-y-2"
  data-index={index}
>
  <div class="glow absolute inset-0 pointer-events-none"></div>

  <img src={post.imageUrl} alt={post.title} class="w-full h-48 object-cover" />

  <div class="p-6 relative z-10">
    <p class="text-sm text-muted-foreground mb-2">
      {post.data.pubDate.toDateString()}
    </p>
    <h3 class="text-2xl font-medium group-hover:text-primary transition-colors">
      {post.data.title}
    </h3>
    <p class="text-muted-foreground mb-4">{post.data.description}</p>

    <a
      href={`/blog/${post.slug}`}
      class="inline-flex items-center gap-2 text-primary font-semibold"
    >
      Leer más →
    </a>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".card").forEach((card) => {
      const glow = card.querySelector(".glow");

      card.addEventListener("mousemove", (e) => {
        const rect = card.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;

        glow.style.background = `radial-gradient(circle 600px at ${x}px ${y}px, rgba(255,255,255,0.15), transparent 70%)`;
      });

      card.addEventListener("mouseleave", () => {
        glow.style.background = "none";
      });
    });
  });
</script>
