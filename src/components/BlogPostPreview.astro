---
export interface Props {
  post: any;
  index: number;
}

const { post, index } = Astro.props;
---

<article
  class="card relative block rounded-xl overflow-hidden border border-border bg-card group transition-all duration-500 hover:shadow-2xl hover:shadow-primary/20 transform hover:-translate-y-2"
  data-index={index}
>
  <div class="glow absolute inset-0 pointer-events-none"></div>

  <a href={`/blog/${post.slug}`}>
    <img
      src={post.data.imageUrl}
      alt={post.data.title}
      class="w-full h-48 object-cover"
    />
  </a>

  <div class="p-6 relative z-10">
    <p class="text-sm text-muted-foreground mb-2">
      {post.data.pubDate.toDateString()}
    </p>

    <a href={`/blog/${post.slug}`}>
      <h3
        class="text-2xl font-medium group-hover:text-primary transition-colors"
      >
        {post.data.title}
      </h3>
    </a>

    <p class="text-muted-foreground mb-4">{post.data.description}</p>

    <a
      href={`/blog/${post.slug}`}
      class="inline-flex items-center gap-2 text-primary font-semibold"
    >
      Leer más →
    </a>
  </div>
</article>

<style>
  .card {
    --glow-color: rgba(0, 0, 0, 0.08);
  }

  :global([data-theme="dark"]) .card {
    --glow-color: rgba(255, 255, 255, 0.15);
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".card").forEach((card) => {
      const glow = card.querySelector(".glow");
      if (!glow) return;

      card.addEventListener("mousemove", (e) => {
        const rect = card.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;

        // Detectar si el tema es dark
        const isDark =
          document.documentElement.getAttribute("data-theme") === "dark";
        const glowColor = isDark
          ? "rgba(255, 255, 255, 0.15)"
          : "rgba(0, 0, 0, 0.08)";

        glow.style.background = `radial-gradient(circle 600px at ${x}px ${y}px, ${glowColor}, transparent 70%)`;
      });

      card.addEventListener("mouseleave", () => {
        glow.style.background = "none";
      });
    });
  });
</script>
