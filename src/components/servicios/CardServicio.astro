---
interface Props {
  title: string;
  description: string;
  linkText: string;
  href: string;
}
const { title, description, linkText, href } = Astro.props as Props;
---

<div
  class="max-w-sm p-6 bg-[#faf5ec] border border-[#e63605] rounded-lg shadow-sm transition-all duration-500 ease-in-out hover:bg-[#ffe8e0] hover:border-[#e63605] dark:bg-[#181925] dark:border-[#e63605] dark:hover:bg-[#20222a] dark:hover:border-[#e63605] hover:cursor-pointer hover:scale-105 hover:shadow-lg hover:-translate-y-2"
>
  <slot name="icon" />

  <a href={href}>
    <h5
      class="mb-2 text-2xl font-semibold tracking-tight text-[#181925] dark:text-[#faf5ec]"
    >
      {title}
    </h5>
  </a>

  <p class="mb-3 font-normal text-[#e63605] dark:text-[#faf5ec]">
    {description}
  </p>

  <a
    href={href}
    class="inline-flex font-medium items-center text-[#e63605] hover:underline dark:text-[#faf5ec]"
  >
    {linkText}
    <svg
      class="w-3 h-3 ms-2.5 rtl:rotate-[270deg]"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 18 18"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M15 11v4.833A1.166 1.166 0 0 1 13.833 17H2.167A1.167 1.167 0 0 1 1 15.833V4.167A1.166 1.166 0 0 1 2.167 3h4.618m4.447-2H17v5.768M9.111 8.889l7.778-7.778"
      ></path>
    </svg>
  </a>
</div>
