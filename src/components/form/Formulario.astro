<section
  id="contacto"
  class="bg-[#faf5ec] text-[#181925] py-16 px-4 text-center"
>
  <div class="max-w-4xl mx-auto p-8 bg-white rounded-md shadow-md">
    <!-- Cambiado a max-w-4xl para más espacio -->
    <h2 class="text-2xl font-semibold mb-6">Dejanos tu consulta</h2>
    <form id="contactForm">
      <div class="md:flex md:space-x-4 mb-4">
        <!-- Flex en pantallas md+ -->
        <div class="mb-4 md:mb-0 md:w-1/2">
          <!-- Mitad del ancho en desktop -->
          <label for="name" class="block text-gray-700 text-sm font-bold mb-2"
            >Nombre</label
          >
          <input
            type="text"
            id="name"
            name="name"
            placeholder="John Doe"
            required
            class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-[#e63605]"
          />
        </div>
        <div class="md:w-1/2">
          <!-- Mitad del ancho en desktop -->
          <label for="email" class="block text-gray-700 text-sm font-bold mb-2"
            >Email</label
          >
          <input
            type="email"
            id="email"
            name="email"
            placeholder="asterisk.consul@example.com"
            required
            class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-[#e63605]"
          />
        </div>
      </div>
      <div class="mb-6">
        <label for="message" class="block text-gray-700 text-sm font-bold mb-2"
          >Contanos que estas necesitando</label
        >
        <textarea
          id="message"
          name="message"
          rows="4"
          placeholder="¿En que podemos ayudarte?"
          class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-[#e63605]"
        ></textarea>
      </div>
      <button
        type="submit"
        class="w-full bg-[#e63605] text-white px-4 py-2 rounded-md hover:bg-[#c42d04] focus:outline-none focus:ring-2 focus:ring-[#e63605] focus:ring-opacity-50 transition-colors cursor-pointer"
      >
        Enviar
      </button>
    </form>
  </div>
</section>

<script is:inline>
  const form = document.getElementById("contactForm");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(form);

    try {
      const response = await fetch(
        "https://formsubmit.co/ajax/asterisk.consul@gmail.com",
        {
          method: "POST",
          body: formData,
        }
      );

      const data = await response.json();

      if (data.success) {
        // Redirige a una página de agradecimiento
        window.location.href = "/gracias";
      } else {
        alert("Hubo un error al enviar el formulario.");
      }
    } catch (error) {
      console.error("Error:", error);
      alert("Error de conexión.");
    }
  });
</script>
