---
import Layout from "../layouts/BaseLayout.astro";
import Hero from "../components/HeroSection/HeroSection.astro";
import ClienteSection from "@/components/clientes/ClienteSection.astro";
import StepsTimeline from "@/components/StepsTimeline.astro";
import GalleryText from "@/components/GalleryText.astro";
import Statements from "@/components/Statements.astro";
import Faqs from "@/components/Faqs.astro";
import Plans from "@/components/Plans.astro";
import BaseDatosZap from "@/components/icons/BaseDatosZap.astro";
import Code from "@/components/icons/code-xml.astro";
import ChartSpline from "@/components/icons/chart-spline.astro";
---

<Layout
  title="Asterisk"
  description="Asterisk es una consultora de servicios empresariales, que ofrece soluciones innovadoras y eficientes para optimizar la productividad de empresas. Entre ellas, ofrecemos servicios de gestión de proyectos y desarrollo de software."
>
  <Hero />
  <ClienteSection />

  <StepsTimeline
    title="Soluciones para la toma de decisiones"
    items={[
      {
        icon: BaseDatosZap,
        title: "Digitalización de Procesos",
        text: "Convertimos tus flujos de trabajo manuales en sistemas digitales eficientes, centralizando tu información.",
      },
      {
        icon: Code,
        title: "Plataforma de Gestión Flow",
        text: "Nuestra plataforma te permite administrar, visualizar y controlar todos tus procesos desde un único lugar.",
      },
      {
        icon: ChartSpline,
        title: "Análisis Y Visualización",
        text: "Extraemos insights valiosos de tus datos para que puedas tomar decisiones informadas y estratégicas.",
      },
    ]}
  />
  <Statements
    items={[
      {
        title: "Soluciones digitales escalables",
        text: "Diseñamos experiencias web y aplicaciones pensadas para crecer con tu negocio, desde startups hasta empresas consolidadas.",
      },
      {
        title: "Tecnología que impulsa resultados",
        text: "Implementamos las herramientas y estrategias digitales que tu empresa necesita para competir en el mercado actual.",
      },
      {
        title: "Impacto real en tu negocio",
        text: "Optimizamos procesos, mejoramos la experiencia del usuario y aumentamos conversiones con métricas claras y medibles.",
      },
    ]}
  />
  <GalleryText
    title="Plataforma Intuitiva y Potente"
    text="Nuestra plataforma de gestión de proyectos ofrece una solución intuitiva y potente para gestionar proyectos de manera eficiente."
    cta={{
      title: "Conocer mas",
      url: "#productos",
    }}
    images={[
      {
        alt: "Línea industrial de pelado de frutos secos",
        src: "foto1.webp",
        width: 6000,
        height: 4000,
      },
      {
        alt: "Detalle de maquinaria DYFMA",
        src: "foto1.webp",
        width: 2689,
        height: 4032,
      },
      {
        alt: "Proceso industrial de pelado",
        src: "foto1.webp",
        width: 3734,
        height: 5359,
      },
    ]}
    marqueeTexts={[
      "Consultoría Digital",
      "Ingeniería de Procesos",
      "Sistemas que Escalan",
      "Tecnología con Criterio",
    ]}
  />

  <Plans
    title="Planes de Soporte"
    subtitle="Soporte, acompañamiento y desarrollo adaptados a la operación de tu empresa."
    items={[
      {
        title: "Soporte Básico",
        price: {
          amount: "USD 207",
          duration: "mes",
        },
        link: {
          title: "Consultar plan",
          url: "/contacto",
        },
        features: [
          { title: "12 horas semanales de soporte" },
          { title: "Acompañamiento funcional y técnico" },
          { title: "Consultas y resolución de incidencias" },
          { title: "Reunión semanal de seguimiento" },
          { title: "Resumen periódico de horas consumidas" },
          { title: "Soporte exclusivo", disabled: true },
        ],
      },
      {
        title: "Soporte Estándar",
        price: {
          amount: "USD 413",
          duration: "mes",
        },
        link: {
          title: "Consultar plan",
          url: "/contacto",
        },
        features: [
          { title: "24 horas semanales de soporte" },
          { title: "Acompañamiento funcional y técnico" },
          { title: "Gestión de requerimientos y prioridades" },
          { title: "Reunión semanal de seguimiento" },
          { title: "Resumen detallado de horas" },
          { title: "Soporte exclusivo", disabled: true },
        ],
      },
      {
        title: "Soporte Avanzado",
        price: {
          amount: "USD 620",
          duration: "mes",
        },
        link: {
          title: "Consultar plan",
          url: "/contacto",
        },
        features: [
          { title: "48 horas semanales de soporte" },
          { title: "Alta prioridad de atención" },
          { title: "Acompañamiento en procesos y adopción" },
          { title: "Reunión semanal de seguimiento" },
          { title: "Resumen detallado de horas" },
          { title: "Soporte exclusivo", disabled: true },
        ],
      },
      {
        title: "Soporte Exclusivo",
        price: {
          amount: "USD 1.033",
          duration: "mes",
        },
        link: {
          title: "Hablar con un asesor",
          url: "/contacto",
        },
        features: [
          { title: "Soporte dedicado" },
          { title: "Priorización total de requerimientos" },
          { title: "Acompañamiento continuo" },
          { title: "Gestión integral de sistemas" },
          { title: "Interlocutor técnico único" },
          { title: "Reuniones y seguimiento permanente" },
        ],
      },
    ]}
  />

  <Faqs
    title="Preguntas Frecuentes"
    mobileTitle="FAQs"
    subtitle="Todo lo que necesitás saber sobre nuestro equipo y cómo trabajamos."
    items={[
      {
        question: "¿Quiénes somos?",
        answer:
          "Somos un equipo especializado en digitalización de procesos, desarrollo de software y automatización. Ayudamos a empresas a optimizar su operación, reducir errores y tomar mejores decisiones basadas en datos.",
      },
      {
        question: "¿Con qué tipo de empresas trabajan?",
        answer:
          "Trabajamos con pymes, startups y empresas en crecimiento que necesitan ordenar procesos, integrar sistemas o desarrollar soluciones digitales a medida.",
      },
      {
        question: "¿Qué tipo de servicios ofrecen?",
        answer:
          "Ofrecemos desarrollo de software a medida, automatización de procesos, integración de sistemas, reporting y consultoría técnica para optimizar flujos de trabajo.",
      },
      {
        question: "¿El desarrollo es personalizado o usan plantillas?",
        answer:
          "Cada solución es 100% personalizada. Analizamos tus procesos actuales y diseñamos una solución que se adapte exactamente a tus necesidades y objetivos.",
      },
      {
        question: "¿Cómo es el proceso de trabajo?",
        answer:
          "Comenzamos con un diagnóstico, definimos el alcance y luego avanzamos por etapas claras: diseño, desarrollo, pruebas y puesta en producción, con acompañamiento continuo.",
      },
      {
        question: "¿Ofrecen soporte después de la entrega?",
        answer:
          "Sí. Brindamos soporte, mantenimiento y mejoras evolutivas para asegurar que la solución siga funcionando correctamente y crezca junto a tu negocio.",
      },
    ]}
  />
</Layout>
