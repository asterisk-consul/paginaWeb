---
import Layout from "../layouts/BaseLayout.astro";
import Hero from "../components/HeroSection/HeroSection.astro";
import ClienteSection from "@/components/clientes/ClienteSection.astro";
import StepsTimeline from "@/components/StepsTimeline.astro";
import BaseDatosZap from "@/components/icons/BaseDatosZap.astro";
---

<Layout
  title="Asterisk"
  description="Asterisk es una consultora de servicios empresariales, que ofrece soluciones innovadoras y eficientes para optimizar la productividad de empresas. Entre ellas, ofrecemos servicios de gestión de proyectos y desarrollo de software."
>
  <Hero />
  <ClienteSection />

  <StepsTimeline
    title="Soluciones para la toma de decisiones"
    items={[
      {
        icon: BaseDatosZap,
        title: "Digitalización de Procesos",
        text: "Convertimos tus flujos de trabajo manuales en sistemas digitales eficientes, centralizando tu información.",
      },
      {
        icon: BaseDatosZap,
        title: "Plataforma de Gestión Flow",
        text: "Nuestra plataforma te permite administrar, visualizar y controlar todos tus procesos desde un único lugar.",
      },
      {
        icon: BaseDatosZap,
        title: "Análisis productivo",
        text: "Evaluamos el tipo de fruto, volumen de producción y necesidades operativas para definir la solución más eficiente.",
      },
    ]}
  />
</Layout>
